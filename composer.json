{
    "name": "m2mtech/weblate-translation-provider",
    "type": "symfony-translation-bridge",
    "description": "Symfony Weblate Translation Provider Bridge",
    "keywords": [
        "weblate",
        "translation",
        "provider"
    ],
    "homepage": "https://github.com/m2mtech/weblate-translation-provider",
    "license": "MIT",
    "authors": [
        {
            "name": "Martin Mandl",
            "email": "tech@m2m.at",
            "homepage": "https://cms.m2m.at",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "spatie/data-transfer-object": "^3.7",
        "symfony/config": "^6.0|^7.0",
        "symfony/dependency-injection": "^6.0|^7.0",
        "symfony/http-client": "^6.0|^7.0",
        "symfony/http-kernel": "^6.0|^7.0",
        "symfony/mime": "^6.0|^7.0",
        "symfony/translation": "^6.0|^7.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.20",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-latest",
        "symfony/console": "^6.0|^7.0",
        "symfony/framework-bundle": "^6.0|^7.0",
        "symfony/phpunit-bridge": "^6.0|^7.0",
        "symplify/easy-coding-standard": "^12.0"
    },
    "autoload": {
        "psr-4": {
            "M2MTech\\WeblateTranslationProvider\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "M2MTech\\WeblateTranslationProvider\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "check-cs": "vendor/bin/ecs check",
        "fix-cs": "vendor/bin/ecs check --fix",
        "phpstan": "vendor/bin/phpstan analyse --memory-limit 1G"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
